{
  "name": "ai-collab-agent",
  "displayName": "AI Collab Agent",
  "description": "Minimal starter: opens a webview to kick off team setup and task allocation.",
  "publisher": "your-publisher-id",
  "version": "0.0.1",
  "engines": {
    "vscode": "^1.80.0"
  },
  "categories": [
    "Other"
  ],
  "activationEvents": [
    "onStartupFinished",
    "onCommand:aiCollab.openPanel",
    "onUri"
  ],
  "main": "./out/extension.js",
  "contributes": {
    "commands": [
      {
        "command": "aiCollab.openPanel",
        "title": "AI Collab Agent: Open"
      },
      {
        "command": "aiCollab.debugHello",
        "title": "AI Collab Agent: Hello (debug)"
      },
      {
        "command": "aiCollab.debugAuth",
        "title": "AI Collab Agent: Debug Auth Status"
      },
      { "command": "ai-code-reviewer.analyzeCode",
      "title": "Analyze Current Folder",
      "category": "AI Code Reviewer"
    },
    {
      "command": "ai-code-reviewer.configure",
      "title": "Configure Settings",
      "category": "AI Code Reviewer"
    },
    {
      "command": "ai-code-reviewer.showResults",
      "title": "Show Analysis Results",
      "category": "AI Code Reviewer"
    },
    {
      "command": "ai-code-reviewer.toggleAutoAnalyze",
      "title": "Toggle Auto-Analyze (On/Off)",
      "category": "AI Code Reviewer"
    }
      
    ],
    "configuration": {
      "title": "AI Collab Agent",
      "properties": {
        "aiCollab.apiBaseUrl": {
          "type": "string",
          "default": "http://localhost:4000",
          "description": "Base URL of your Agent API (future use)."
        },
        "aiCodeReviewer.apiEndpoint": {
          "type": "string",
          "default": "",
          "description": "Your Supabase function URL for code analysis"
        },
        "aiCodeReviewer.autoAnalyzeInterval": {
          "type": "number",
          "default": 1,
          "description": "Auto-analyze interval in minutes (default: 1 minutes)",
          "minimum": 1,
          "maximum": 60
        },
        "aiCodeReviewer.autoAnalyzeEnabled": {
          "type": "boolean",
          "default": true,
          "description": "Enable automatic code analysis"
        }
      }
    },
    "keybindings": [
      {
        "command": "ai-code-reviewer.analyzeCode",
        "key": "ctrl+shift+a",
        "mac": "cmd+shift+a"
      },
      {
        "command": "ai-code-reviewer.toggleAutoAnalyze",
        "key": "ctrl+shift+t",
        "mac": "cmd+shift+t"
      }
    ]
  },
  "viewsContainers": {
			"activitybar": [
				{
					"id": "aiCollab-sidebar",
					"title": "AI Collab",
					"icon": "media/collaboration.svg"
				}
			]
		},
		"views": {
			"aiCollab-sidebar": [
				{
					"id": "aiCollabView",
					"name": "Team Panel"
				}
			]
		},
  "scripts": {
    "vscode:prepublish": "npm run compile",
    "compile": "tsc -p ./",
    "watch": "tsc -w -p ./",
    "package": "vsce package"
  },
  "dependencies": {
    "@supabase/supabase-js": "^2.39.8",
    "dotenv": "^16.4.5"
  },
  "devDependencies": {
    "@types/node": "^22.18.6",
    "@types/vscode": "^1.70.0",
    "esbuild": "^0.25.10",
    "typescript": "^5.9.2"
  },
  "keywords": [],
  "author": "",
  "license": "ISC"
}
