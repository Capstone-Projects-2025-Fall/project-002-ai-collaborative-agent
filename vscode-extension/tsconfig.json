{
  "compilerOptions": {
    "target": "ES2022",
    "module": "CommonJS",
    "moduleResolution": "node",
    "strict": true,
    "outDir": "out",
    "lib": ["ES2022", "DOM"],
    "types": ["vscode", "node"],
    "esModuleInterop": true,
    "skipLibCheck": true,
    "sourceMap": true,
    "rootDir": "src"
  },
  "include": ["src"]
}

