{
  "compilerOptions": {
    "target": "ES2022",
    "module": "CommonJS",
    "moduleResolution": "node",
    "strict": true,
    "rootDir": "src",
    "outDir": "out",
    "lib": ["ES2022", "DOM"],
    "types": ["vscode", "node"],
    "esModuleInterop": true,
    "skipLibCheck": true,
    "sourceMap": true,
    "baseUrl": ".",
    "paths": {
      "*": ["src/*", "*"]
    }
  },
  "include": ["src/**/*", "ts/**/*"],
  "exclude": ["src/**/*.test.ts"]
}
